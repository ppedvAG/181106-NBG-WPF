<Application x:Class="Ressourcen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ressourcen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="DefaultButtonColor" Color="Salmon"/>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Mistral"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="IndianRed"/>
            <Setter Property="Background" Value="{StaticResource DefaultButtonColor}"/>
        </Style>

    </Application.Resources>
</Application>
