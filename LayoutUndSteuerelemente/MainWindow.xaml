<Window x:Class="LayoutUndSteuerelemente.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LayoutUndSteuerelemente"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button Content="Personen anzeigen" DockPanel.Dock="Top" Click="Button_Click"/>
        <ListBox x:Name="listBoxPersonen" DisplayMemberPath="GanzerName" />
    </DockPanel>
</Window>
